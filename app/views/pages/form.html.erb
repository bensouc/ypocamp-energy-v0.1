<%= simple_form_for :prospect,url: calculate_path, html: { novalidate: false } do |form|%>
  <div class="invisible">
    <%= form.input :email, as: :email, input_html:{class: 'd-none', value: @email} %>
  </div>
  <div class="form-box mt-3" id='fridge' data-enroll-target='formBox'>
    <h2><i class="fa-solid fa-snowflake"></i> REFRIGERATEUR 1/5</h2>
    <h1>Quel type de frigo possédez-vous ?</h1>
    <%= form.input :fridge, required: true,label: false, as: :radio_buttons,
                                    collection: ["TRIMIXTE", "A COMPRESSION"],
                                    collection_wrapper_tag: 'div',
                                    collection_wrapper_class: 'wrapper',
                                    item_wrapper_class: 'domain-item',
                                    checked: "TRIMIXTE" ,
                                    input_html: { class: 'selector domain-selector'}
                                    %>
    <div class="nav-btn">
      <div class=' mt-3'></div>
      <div class='next-btn mt-3' data-action='click->enroll#displayNext'></div>
    </div>
    <div class="bottom-navbar mt-3">
      Ceci est la future navbar
    </div>
  </div>
  <div class="form-box d-none mt-3" id='solar' data-enroll-target='formBox'>
    <h2><i class="fa-solid fa-solar-panel"></i> PANNEAU SOLAIRE 2/5</h2>
    <h1>Avez vous un panneau solaire ?</h1>
    <%= form.input :solar,required: true,label: false, as: :radio_buttons,
                                    collection: ["AUCUN", "100W","130W","200W"],
                                    checked: 'AUCUN',
                                    collection_wrapper_tag: 'div',
                                    collection_wrapper_class: 'wrapper',
                                    item_wrapper_class: 'domain-item',
                                    html5: true,
                                    input_html: { class: 'selector domain-selector'}
                                    %>
    <div class="nav-btn">
      <div class='previous-btn mt-3' data-action='click->enroll#displayBack'></div>
      <div class='next-btn mt-3' data-action='click->enroll#displayNext'></div>
    </div>
    <div class="bottom-navbar mt-3">
      Ceci est la future navbar
    </div>
  </div>
  <div class="form-box d-none mt-3" id='battery' data-enroll-target='formBox'>
    <h2><i class="fa-solid fa-car-battery"></i> BATTERIE CELLULE 3/5</h2>
    <h1>Quel type de batterie avez-vous ?</h1>
    <%= form.input :battery, required: true,label: false, as: :radio_buttons,
                                    collection: ["CLASSIQUE", "AGM","LIHTIUM","AUTRE"],
                                    checked: 'CLASSIQUE',
                                    collection_wrapper_tag: 'div',
                                    collection_wrapper_class: 'wrapper',
                                    item_wrapper_class: 'domain-item',
                                    html5: true,
                                    input_html: { class: 'selector domain-selector'}
                                    %>
    <div class="nav-btn">
      <div class='previous-btn mt-3' data-action='click->enroll#displayBack'></div>
      <div class='next-btn mt-3' data-action='click->enroll#displayNext'></div>
    </div>
    <div class="bottom-navbar mt-3">
      Ceci est la future navbar
    </div>
  </div>
  <div class="form-box d-none mt-3" id='km'  data-enroll-target='formBox'>
    <h2> <i class="fa-solid fa-gauge-high"></i> DISTANCE PARCOURUE 4/5</h2>
    <h1>Combien de kilomètres parcourez vous par jour ?</h1>
    <div class="d-flex">
      <%= form.input :kms ,required: true,label: false, as: :integer, input_html: { class: 'km-form', value: "1050" },
      html5: true%>
      <div class='units'>KMS</div>
    </div>
    <div class="nav-btn">
      <%# <div class='ypo-btn mt-3' data-action='click->enroll#displayBack'>retour</div>
      <div class='ypo-btn mt-3' data-action='click->enroll#displayNext'>Suivant</div> %>
      <div class='previous-btn mt-3' data-action='click->enroll#displayBack'></div>
      <div class='next-btn mt-3' data-action='click->enroll#displayNext'></div>
    </div>
    <div class="bottom-navbar mt-3">
      Ceci est la future navbar
    </div>
  </div>
  <div class="form-box d-none mt-3" id='features'  data-enroll-target='formBox'>
    <h2><i class="fa-solid fa-list-check"></i> EQUIPEMENTS 5/5</h2>
    <div class="features-box1">
      <div class="feature-card">
        <label><i class="fa-solid fa-mobile-screen-button"></i> Téléphone</label>
        <%= form.input :phone, as: :select, collection: (0..6),
        html5: true, label: false,
        prompt: "0", selected: 0 %>
      </div>
      <div class="feature-card">
        <label><i class="fa-solid fa-desktop"></i> Ordinateur ou tablette</label>
        <%= form.input :computer, as: :select, collection: (0..6),
        html5: true, label: false,
        prompt: "0", selected: 0 %>
      </div>
      <div class="feature-card">
        <label><i class="fa-solid fa-bicycle"></i> Vélo éléctrique</label>
        <%= form.input :computer, as: :select, collection: (0..6),
        html5: true, label: false,
        prompt: "0", selected: 0 %>
      </div>
    </div>
    <div class="grey-line"></div>
    <div class="features-box2">
      <h5> <i class="fa-solid fa-sun"></i> Type de chauffage</h5>
      <%= form.input :heater, as: :radio_buttons,
                                    collection: ["ALDE", "Gasoil","Gaz"],
                                    checked: 'ALDE',
                                    collection_wrapper_tag: 'div',
                                    collection_wrapper_class: 'wrapper',
                                    item_wrapper_class: 'domain-item',
                                    html5: true
                                    # input_html: { class: 'selector domain-selector'}
                                    %>
    </div>
    <div class="grey-line"></div>
    <div class="features-box3">
      <%= form.input :other_features,  as: :check_boxes,
                                    collection: ['Convertisseur',
                                    "Machine à café",
                                    "Respirateur",
                                    "Sèche-cheveux",
                                    "Robot Cuisine",
                                    "Micro-onde"],
                                    multiple: true,
                                    collection_wrapper_tag: 'div',
                                    collection_wrapper_class: 'wrapper',
                                    item_wrapper_class: 'domain-item',
                                    html5: true,
                                    input_html: { class: 'selector domain-selector-small'}
                                    %>
    </div>
    <div class="grey-line"></div>
    <div class="additionnal-features-box">
      <div class="add-btn">
        <i class="fa-solid fa-circle-plus"></i>
        Ajouter un appareil
      </div>
    </div>
    <div class="grey-line mt-3"></div>
    <div class='previous-btn' data-action='click->enroll#displayBack'></div>
    <div class="bottom-navbar mt-3">
      Ceci est la future navbar
    </div>
    <div class="ypo-btn" data-action='click->enroll#displayNext'>
      <i class="fa-solid fa-angles-left"></i>
      SOLUTIONS POUR AMELIORER MON AUTONOMIE
      <i class="fa-solid fa-angles-right"></i>
    </div>
  </div>
  <div class="form-box mt-3 d-none" id='results' data-enroll-target='formBox'>
    <div class="result-card">
      Vous consommez <br>
      <%= form.input :perc_by_day, as: :integer, input_html:{value: "40%"}, class: "form-to-text" %>
      de votre batterie en 24h</bold>
  </div>
  <div class="result-card">
    Vous pouvez voyager pendant environ<br>
    <bold>5 jours en toute autonomie</bold>
  </div>
  <div class="result-card">
    Vous consommez en moyenne<br>
    <bold>x AH par jour</bold>
  </div>
  <%= form.button :submit, "SOLUTIONS POUR AMELIORER VOTRE AUTONOMIE" , class: 'ypo-btn' ,data: { confirm: "Etes vous sur?"} %>
</div>
<% end %>
